    <div class="container">
      <h1>Add Service</h1>

      <form action="/servicepage/add-service-result" method="POST">
        <div class="mb-3">
          <label for="inputTitle" class="form-label">Nama Jasa:</label>
          <input
            name="title"
            type="text"
            class="form-control"
            id="inputTitle"
          />
        </div>
        <div class="mb-3">
          <label for="inputDescription" class="form-label">Deskripsi :</label>
          <input
            name="description"
            type="text"
            class="form-control"
            id="inputDescription"
          />
        </div>
        <div class="mb-3">
          <label for="inputStatus" class="form-label">Status Harga :</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="flexRadioDefault"
              id="flexRadioDefault1"
              checked
            />
            <label class="form-check-label" for="flexRadioDefault1">
              Borongan
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="flexRadioDefault"
              id="flexRadioDefault2"
            />
            <label class="form-check-label" for="flexRadioDefault2">
              Harga satuan
            </label>
          </div>
        </div>
        <div class="mb-3">
          <label for="inputCategory" class="form-label">Kategori :</label>
          <input
            name="category"
            type="text"
            class="form-control"
            id="inputCategory"
          />
        </div>
        <div class="mb-3">
          <label for="inputSubCategory" class="form-label"
            >Sub Kategori :</label
          >
          <input
            name="sub_category"
            type="text"
            class="form-control"
            id="inputSubCategory"
          />
        </div>
        <div class="mb-3">
          <label for="inputPrice" class="form-label">Harga :</label>
          <input
            name="price"
            type="number"
            class="form-control"
            id="inputPrice"
          />
        </div>
        <div class="mb-3">
          <label for="inputPhoto" class="form-label">Foto :</label>
          <input
            name="photo"
            type="text"
            class="form-control"
            id="inputPhoto"
          />
        </div>
        <div class="mb-3">
          <label for="inputLinkPortofolio" class="form-label"
            >Link Portofolio :</label
          >
          <input
            name="link_portofolio"
            type="text"
            class="form-control"
            id="inputLinkPortofolio"
          />
        </div>

        <div class="container mb-3">
          <button type="submit" class="btn btn-warning">Buat Jasa</button>
        </div>
      </form>
    </div>

