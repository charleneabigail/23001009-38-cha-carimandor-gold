    <!-- NAVBAR END -->
    <div class="container">
      <h1>Add Service</h1>

      <form action="/servicepage/add-service-result" method="POST">
        <!-- <label>id_seller :</label>
        <input type="text" name="id_seller" />
        <br /><br /> -->

        <label>Title :</label>
        <input type="text" name="title" />
        <br /><br />

        <label>Description :</label>
        <input type="text" name="description" />
        <br /><br />

        <label>Status :</label>
        <select name="status">
          <option value="borongan">Borongan</option>
          <option value="harga satuan">Harga Satuan</option>
        </select>
        <br /><br />

        <label>Category :</label>
        <input type="text" name="category" />
        <br /><br />

        <label>Sub Category :</label>
        <input type="text" name="sub_category" />
        <br /><br />

        <label>Price :</label>
        <input type="number" name="price" />
        <br /><br />

        <label>Photo :</label>
        <input type="text" name="photo" />
        <br /><br />

        <label>Link Portofolio :</label>
        <input type="text" name="link_portofolio" />
        <br /><br />

        <input type="submit" value="Add Service" />
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
