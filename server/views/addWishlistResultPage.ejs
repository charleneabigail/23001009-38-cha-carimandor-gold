      <% } else{ %>
      <img style="height: 300px; width: 300px" src="/public/failed.png" />
      <!-- LOGO / ICON GAGAL -->
      <h1><%= message %></h1>
      <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
